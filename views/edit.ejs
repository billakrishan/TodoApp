<% include ../views/partials/header %>

<div class="row">
<div class="col-md-6">
  <form method="post" action="/todo/edit/<%=todo._id %>">
  <div class="form-group">
    <label> Todo Name </label>
    <input type="text" class="form-control" name="text" placeholder="Add Todo" value="<%= todo.text %>">
  </div>
  <div class="form-group">
    <label> Todo Body </label>
    <textarea name="body" class="form-control" placeholder="Add Body"> <%=todo.body %> </textarea>
  </div>
  <br>
  <button class="btn btn-primary" type="submit"> Submit </button>
  <a class="btn btn-danger" href="/"> Cancel </a>
  </form>
</div>
</div>




<% include ../views/partials/footer %>
